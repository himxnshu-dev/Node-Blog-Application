<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container app-container">
      <div class="d-flex justify-content-between align-items-center blog-header">
        <h2 class="mb-0">Latest Blogs</h2>
        <% if (locals.user) { %>
          <div class="text-muted">Welcome, <strong><%= locals.user.fullName %></strong></div>
        <% } %>
      </div>

      <div class="blog-grid">
        <% blogs.forEach(blog => { %>
          <div class="card soft">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-accent mt-2">View Blog</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
