<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Blog</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container app-container">
      <div class="card soft p-4">
        <div class="d-flex align-items-center mb-3">
          <div class="me-3">
            <% if (blog.createdBy && blog.createdBy.userProfileURL) { %>
              <img src="<%= blog.createdBy.userProfileURL %>" class="avatar-sm" alt="author" />
            <% } %>
          </div>
          <div>
            <h2 class="mb-0"><%= blog.title %></h2>
            <div class="text-muted" style="font-size:0.9rem">by <%= blog.createdBy ? blog.createdBy.fullName : 'Unknown' %></div>
          </div>
        </div>

        <% if (blog.coverImageURL) { %>
          <img src="<%= blog.coverImageURL %>" class="img-fluid rounded mb-3" style="max-height:420px;object-fit:cover" />
        <% } %>

        <div class="blog-content">
          <pre class="mb-0"><%= blog.content %></pre>
        </div>
      </div>

      <% if (locals.user) { %>
        <div class="card soft p-3 mt-3">
          <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-2">
              <input type="text" class="form-control" placeholder="Leave a comment here" id="comment" name="content" />
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-accent">Comment</button>
            </div>
          </form>
        </div>
      <% } %>

      <div class="mt-4">
        <% if (locals.comments && comments.length > 0) { %>
          <h4 class="mb-3">Comments (<%= comments.length %>)</h4>
          <% comments.forEach(comment => { %>
            <div class="comment-box d-flex mb-2">
              <% if (comment.createdBy && comment.createdBy.userProfileURL) { %>
                <img src="<%= comment.createdBy.userProfileURL %>" class="avatar-sm me-3" />
              <% } %>
              <div>
                <div class="fw-bold"><%= comment.createdBy ? comment.createdBy.fullName : 'Anonymous' %></div>
                <div class="text-muted" style="font-size:0.95rem"><%= comment.comment %></div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-muted">No comments yet â€” be the first to comment.</div>
        <% } %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>